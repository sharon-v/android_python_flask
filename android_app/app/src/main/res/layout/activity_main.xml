<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/textView_response"
        android:layout_width="272dp"
        android:layout_height="62dp"
        android:layout_marginTop="92dp"
        android:text="response_text_will_display_here"
        android:textAlignment="center"
        android:textSize="24sp"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="69dp" />

    <Button
        android:id="@+id/button_close_camera"
        android:layout_width="234dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="96dp"
        android:backgroundTint="@color/design_default_color_primary_dark"
        android:text="close_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/click_image"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_open_camera"
        android:layout_width="234dp"
        android:layout_height="65dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/design_default_color_primary_dark"
        android:text="open_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/click_image"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Capture"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="667dp" />

    <ImageView
        android:id="@+id/click_image"
        android:layout_width="361dp"
        android:layout_height="139dp"
        android:layout_marginTop="188dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp">


    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>